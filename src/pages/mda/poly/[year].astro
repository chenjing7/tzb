---
import MainLayout from '../../../layouts/MainLayout.astro';
import { marked } from 'marked';

export function getStaticPaths() {
  return [
    { params: { year: '2023' } },
    { params: { year: '2022' } },
    { params: { year: '2021' } },
  ];
}

const { year } = Astro.params;

// 读取对应年份的MDA内容
const mdaContent = await Astro.glob('../../../content/mda/poly/*.md');
const currentMda = mdaContent.find(mda => mda.file.includes(`${year}.md`));
const contentHtml = currentMda ? marked.parse(currentMda.rawContent()) : '';

// 可用年份列表
const years = [2023, 2022, 2021];
---

<MainLayout title={`保利发展 ${year}年度管理层讨论与分析`} activeNav="mda">
  <div class="max-w-5xl mx-auto">
    <div class="flex items-center gap-4 mb-6">
      <a href="/TZB/mda/poly" class="text-primary-600 hover:text-primary-800 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
        </svg>
        返回列表
      </a>
    </div>
    
    <div class="card overflow-visible">
      <div class="p-6 border-b border-secondary-100">
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 justify-between">
          <div>
            <h1 class="text-2xl font-bold text-secondary-900">
              保利发展 <span class="text-secondary-500 text-base ml-2">600048.SH</span>
            </h1>
            <p class="text-secondary-600 mt-1">
              {year}年度管理层讨论与分析
            </p>
          </div>
          
          <div class="flex gap-3">
            <div class="relative">
              <select 
                id="year-select" 
                class="appearance-none bg-white border border-secondary-200 rounded-lg pl-4 pr-10 py-2 focus:ring-primary-500 focus:border-primary-500"
              >
                {years.map(y => (
                  <option value={y} selected={y === parseInt(year)}>{y}年</option>
                ))}
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-secondary-400">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="p-6">
        <article class="prose prose-stone lg:prose-lg max-w-none">
          <div set:html={contentHtml} />
        </article>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  // 处理年份切换
  const yearSelect = document.getElementById('year-select');
  if (yearSelect) {
    yearSelect.addEventListener('change', (e) => {
      const target = e.target as HTMLSelectElement;
      window.location.href = `/TZB/mda/poly/${target.value}`;
    });
  }
</script> 
---
import MainLayout from '../../layouts/MainLayout.astro';
import * as fs from 'node:fs/promises';
import * as path from 'node:path';

// Define company interface
interface Company {
  id: string;
  name: string;
  latestYear?: number;
}

// 获取公司所有可用年份
async function getAvailableYears(company: string) {
  try {
    const mdaDir = path.resolve(`./src/content/mda/${company}`);
    const files = await fs.readdir(mdaDir);
    const years = files
      .filter(file => file.endsWith('.md'))
      .map(file => parseInt(file.replace('.md', '')))
      .sort((a, b) => b - a); // 降序排列
    return years;
  } catch (error) {
    console.error(`Error reading directory for ${company}: ${error}`);
    return [];
  }
}

// 使用import.meta.glob动态获取所有公司目录
const mdaFiles = await import.meta.glob('/src/content/mda/*/*.md', { eager: true });

// 提取公司ID（目录名）
const companyIds = Array.from(new Set(
  Object.keys(mdaFiles).map(path => {
    const parts = path.split('/');
    // 从路径中提取公司目录名
    return parts[parts.length - 2];
  })
));

// 公司名称映射表
const companyNameMap: Record<string, string> = {
  'vanke': '万科A',
  'poly': '保利发展',
  // 可以在这里添加更多的公司名称映射
};

// 构建公司列表并获取每个公司的最新年份
const companies: Company[] = await Promise.all(companyIds.map(async id => {
  const years = await getAvailableYears(id);
  return {
    id,
    name: companyNameMap[id] || id,
    latestYear: years[0] // 获取最新年份
  };
}));
---

<MainLayout title="管理层讨论与分析" activeNav="mda">
  <div class="max-w-7xl mx-auto">
    <div class="mb-8">
      <input 
        type="text" 
        id="companySearch" 
        placeholder="搜索公司..." 
        class="w-full max-w-md px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
      />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="companyGrid">
      {companies.map(company => (
        <a 
          href={`/tzb/mda/${company.id}/${company.latestYear}`} 
          class="card p-6 hover:shadow-lg transition-shadow duration-300" 
          data-company={company.name}
        >
          <div class="flex items-center">
            <h2 class="text-lg font-semibold text-primary-700">{company.name}</h2>
          </div>
        </a>
      ))}
    </div>
  </div>

  <script>
    const searchInput = document.getElementById('companySearch');
    const companyGrid = document.getElementById('companyGrid');

    if (searchInput && companyGrid) {
      const companyCards = companyGrid.querySelectorAll('a');

      searchInput.addEventListener('input', (e) => {
        const target = e.target as HTMLInputElement;
        const searchTerm = target.value.toLowerCase();
        
        companyCards.forEach(card => {
          const companyName = card.getAttribute('data-company')?.toLowerCase() || '';
          if (companyName.includes(searchTerm)) {
            card.style.display = '';
          } else {
            card.style.display = 'none';
          }
        });
      });
    }
  </script>
</MainLayout> 
---
import MainLayout from '../../layouts/MainLayout.astro';
import { marked } from 'marked';

// 获取查询参数
const { companies: companiesParam, year: yearParam } = Astro.url.searchParams;
const companyIds = companiesParam ? companiesParam.split(',') : [];
const year = yearParam ? parseInt(yearParam) : new Date().getFullYear();

// 模拟公司数据
const companiesData = [
  { id: 'alibaba', name: '阿里巴巴', code: 'BABA', years: [2023, 2022, 2021, 2020, 2019] },
  { id: 'tencent', name: '腾讯控股', code: '00700', years: [2023, 2022, 2021, 2020, 2019] },
  { id: 'meituan', name: '美团', code: '03690', years: [2023, 2022, 2021, 2020, 2019] },
  { id: 'jd', name: '京东', code: 'JD', years: [2023, 2022, 2021, 2020, 2019] },
  { id: 'pinduoduo', name: '拼多多', code: 'PDD', years: [2023, 2022, 2021, 2020, 2019] },
];

// 筛选所选公司
const selectedCompanies = companiesData.filter(company => companyIds.includes(company.id));

// 模拟获取MD&A内容的函数
function getMdaContent(companyId, companyName, companyCode, year) {
  return `
# ${companyName} ${year}年度管理层讨论与分析

## 业务概览

${companyName}（股票代码：${companyCode}）是中国领先的科技公司，主要从事电子商务、云计算、数字媒体和娱乐等业务。

## 财务表现

### 收入

本报告期内，公司实现营业收入XXX亿元人民币，同比增长XX%。增长主要由于核心业务持续拓展以及新业务的快速发展。

### 利润

公司实现净利润XXX亿元人民币，同比增长XX%。净利润率为XX%，较上一年度提高了X个百分点。

## 业务分析

### 电子商务

电子商务业务收入为XXX亿元人民币，占总收入的XX%。

### 云计算

云计算业务收入为XXX亿元人民币，同比增长XX%。
`;
}

// 为每个公司准备内容
const contents = selectedCompanies.map(company => ({
  company,
  content: marked.parse(getMdaContent(company.id, company.name, company.code, year))
}));

// 可用年份（取所有公司年份的交集）
const availableYears = selectedCompanies.length > 0
  ? selectedCompanies.reduce((acc, company) => {
      return acc.filter(year => company.years.includes(year));
    }, selectedCompanies[0].years)
  : [];
---

<MainLayout title="对比分析" activeNav="analysis">
  <div class="max-w-7xl mx-auto">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-4">
        <a href="/analysis" class="text-primary-600 hover:text-primary-800 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
          </svg>
          返回列表
        </a>
      </div>
      
      <div class="relative">
        <select 
          id="year-select" 
          class="appearance-none bg-white border border-secondary-200 rounded-lg pl-4 pr-10 py-2 focus:ring-primary-500 focus:border-primary-500"
        >
          {availableYears.map(y => (
            <option value={y} selected={y === year}>{y}年</option>
          ))}
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-secondary-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </div>
      </div>
    </div>
    
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-secondary-900 mb-2">对比分析</h1>
      {selectedCompanies.length > 0 ? (
        <p class="text-secondary-600">
          正在比较 {selectedCompanies.map(c => c.name).join('、')} {year}年度管理层讨论与分析
        </p>
      ) : (
        <p class="text-secondary-600">请从列表页选择2-3家公司进行对比</p>
      )}
    </div>
    
    {selectedCompanies.length === 0 ? (
      <div class="card p-8 text-center">
        <p class="text-secondary-600 mb-4">未选择公司或参数错误</p>
        <a href="/analysis" class="btn btn-primary">返回公司列表</a>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {contents.map(({ company, content }) => (
          <div class="card overflow-hidden">
            <div class="p-4 border-b border-secondary-100 bg-secondary-50">
              <h2 class="font-semibold text-secondary-900">
                {company.name} <span class="text-secondary-500 text-sm ml-2">{company.code}</span>
              </h2>
            </div>
            <div class="p-4 h-[600px] overflow-auto">
              <article class="prose prose-sm max-w-none">
                <div set:html={content} />
              </article>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</MainLayout>

<script define:vars={{ companyIds: companyIds.join(',') }}>
  // 处理年份切换
  const yearSelect = document.getElementById('year-select');
  if (yearSelect) {
    yearSelect.addEventListener('change', (e) => {
      const selectedYear = e.target.value;
      window.location.href = `/analysis/compare?companies=${companyIds}&year=${selectedYear}`;
    });
  }
</script> 
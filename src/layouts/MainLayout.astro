---
// This is the frontmatter section with proper delimiters
import '../styles/global.css';
import '../styles/table.css';

interface Props {
  title: string;
  activeNav?: string;
}

const { title, activeNav } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | TZB</title>
  </head>
  <body class="bg-secondary-50 text-secondary-900">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="fixed top-0 left-0 w-64 bg-white shadow-md h-screen flex flex-col">
        <div class="p-6 border-b border-secondary-100">
          <a href="/tzb" class="block">
            <h1 class="text-2xl font-bold text-primary-700 cursor-pointer">TZB</h1>
          </a>
        </div>
        <nav class="p-4 flex-1">
          <ul class="space-y-2">
            <li>
              <a 
                href="/tzb/mda" 
                class={`block px-4 py-2 rounded-lg transition-colors ${activeNav === 'mda' ? 'bg-primary-50 text-primary-700 font-medium' : 'hover:bg-secondary-50'}`}
              >
                管理层讨论与分析
              </a>
            </li>
            <li>
              <a 
                href="/tzb/letters" 
                class={`block px-4 py-2 rounded-lg transition-colors ${activeNav === 'letters' ? 'bg-primary-50 text-primary-700 font-medium' : 'hover:bg-secondary-50'}`}
              >
                致股东信
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 ml-64 p-8 max-w-none">
        <slot />
      </main>
    </div>
    
    <script>
      // Import the table enhancer utility
      import { enhanceTableBorders } from '../utils/tableEnhancer.js';
      
      // Apply table border styles after page loads
      document.addEventListener('DOMContentLoaded', enhanceTableBorders);
    </script>
  </body>
</html> 
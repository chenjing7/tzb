---
// This is the frontmatter section with proper delimiters
import '../styles/global.css';
import '../styles/table.css';
import logo from '../assets/logo.svg';

interface Props {
  title: string;
  activeNav?: string;
}

const { title, activeNav } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | TZB 翻阅每一页</title>
    
    <!-- Preload critical libraries to improve loading performance -->
    <link rel="preload" href="https://unpkg.com/@popperjs/core@2" as="script" />
    <link rel="preload" href="https://unpkg.com/tippy.js@6" as="script" />
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/chart.js" as="script" />
    <link rel="preload" href="https://unpkg.com/tippy.js@6/dist/tippy.css" as="style" />
  </head>
  <body class="bg-secondary-50 text-secondary-900">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="fixed top-0 left-0 w-56 bg-white shadow-md h-screen flex flex-col">
        <div class="p-4 border-b border-secondary-80">
          <a href="/tzb" class="block">
            <img src={logo.src} alt="TZB Logo" class="h-8" />
          </a>
        </div>
        <nav class="p-4 flex-1">
          <ul class="space-y-2">
            <li>
              <a 
                href="/tzb/featured" 
                class={`nav-link ${activeNav === 'featured' ? 'active' : ''}`}
              >
                精选文章
              </a>
            </li>
            <li>
              <a 
                href="/tzb/mda" 
                class={`nav-link ${activeNav === 'mda' ? 'active' : ''}`}
              >
                管理层讨论与分析
              </a>
            </li>
            <li>
              <a 
                href="/tzb/letters" 
                class={`nav-link ${activeNav === 'letters' ? 'active' : ''}`}
              >
                致股东信
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Main content -->
      <main class="flex-1 ml-56 bg-white p-8 max-w-none">
        <slot />
      </main>
    </div>
    
    <script>
      // Import the table enhancer utility
      import { enhanceTableBorders } from '../utils/tableEnhancer.js';
      
      // Apply table border styles after page loads
      document.addEventListener('DOMContentLoaded', enhanceTableBorders);
    </script>
  </body>
</html> 